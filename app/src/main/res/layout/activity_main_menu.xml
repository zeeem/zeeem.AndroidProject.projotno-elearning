<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="8dp"
    android:layout_marginStart="8dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:weightSum="2"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        android:weightSum="1">

        <Button
            android:id="@+id/eyeButton"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_margin="8dp"
            android:layout_weight="1.51"
            android:background="@color/colorPrimary"
            android:onClick="goToEyeSlide"
            android:text="@string/eye_button"
            android:textSize="25sp" />

        <Button
            android:id="@+id/kideyButton"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_margin="8dp"
            android:layout_weight="1.75"
            android:background="@drawable/kidney_btn"
            android:onClick="lockButtonClick"
            android:text="@string/kidney_button"
            android:textSize="25sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <Button
            android:id="@+id/diabeticButton"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_margin="8dp"
            android:layout_weight="1.75"
            android:background="@drawable/diabetic_btn"
            android:onClick="lockButtonClick"
            android:text="@string/diabetic_button"
            android:textSize="25sp" />

        <Button
            android:id="@+id/nutritionButton"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_margin="8dp"
            android:layout_weight="1.75"
            android:background="@drawable/pushti_btn"
            android:onClick="lockButtonClick"
            android:text="@string/nutrition_button"
            android:textSize="25sp" />
    </LinearLayout>

</LinearLayout>

